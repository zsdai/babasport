<!-- 说明：在开发时调用虚拟机  性能差  故不连接注册中心 配置如下-->
	<!-- 配置服务消费方 -->
		<!-- 1.服务消费方 提供名称 -->
		<dubbo:application name="baba-console" />
		<!-- 2.到注册中心注册地址  即链接zookeeper -->
		<dubbo:registry address="N/A"/>
		<!-- 3.调用接口 -->
		<dubbo:reference interface="com.itheima.core.service.TestDBService" url="dubbo://127.0.0.1:20880"	id="testDBService"/>
		<dubbo:reference interface="com.itheima.core.service.product.BrandService" url="dubbo://127.0.0.1:20880" id="brandService"/>
		<dubbo:reference interface="com.itheima.core.service.UploadService" url="dubbo://127.0.0.1:20880" id="uploadService"/>
		<dubbo:reference interface="com.itheima.core.service.product.ProductService" url="dubbo://127.0.0.1:20880" id="productService"/>
		<dubbo:reference interface="com.itheima.core.service.product.ColorService" url="dubbo://127.0.0.1:20880" id="colorService"/>
		<dubbo:reference interface="com.itheima.core.service.product.SkuService" url="dubbo://127.0.0.1:20880" id="skuService"/>
		<!-- 消费方全局配置:超时时间 -->
		<dubbo:consumer timeout="600000" check="false"></dubbo:consumer>
				
